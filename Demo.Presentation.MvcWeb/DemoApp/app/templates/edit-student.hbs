        <form {{action 'ok' on='submit' target=view}}>
          <div class="form-group">
            <label>FirstName</label>
            {{input class="form-control" value=model.firstName placeholder='Please input first name' required=true}}
          </div>
          <div class="form-group">
            <label>LastName</label>
            {{input class="form-control" value=model.lastName placeholder='Please input last name'}}
          </div>
        </form>
      {{/modal-dialog}}
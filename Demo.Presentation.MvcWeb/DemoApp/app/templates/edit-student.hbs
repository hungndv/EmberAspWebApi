      {{#modal-dialog title=title ok='save' close='removeModal' submitButtonText=submitButtonText isDelete=isDelete}}
        <form {{action "ok" on="submit"}}>
          <ul class="errors">
            {{#each errors as |error|}}
              <li>{{error.message}}</li>
            {{/each}}
          </ul>
          <div class="form-group">
            <label>FirstName</label>
            {{input id="FirstName" name="FirstName" class="form-control" value=model.firstName placeholder='Please input first name' required="required" disabled=isDelete action="required" on="key-up"}}
          </div>
          <div class="form-group">
            <label>LastName</label>
            {{input class="form-control" value=model.lastName placeholder='Please input last name' disabled=isDelete}}
          </div>
        </form>
      {{/modal-dialog}}